<launch>
  <arg name="record" default="false" />

  <!-- Launch Gazebo with the specified world -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <!-- <arg name="debug" value="0" /> -->
    <arg name="gui" value="true" />
    <arg name="use_sim_time" value="true" />
    <arg name="headless" value="false" />
    <arg name="world_name" default="$(find jackal_gazebo)/worlds/jackal_race.world" />
  </include>
  <include file="$(find jackal_description)/launch/description.launch">
    <arg name="config" value="front_laser" />
  </include>
  <include file="$(find jackal_control)/launch/control.launch" />

  <!-- Run Node that sets 2D Navigation goals for map exploration-->
  <node pkg="project4" name="patroller" type="patroller.py" output="screen"/>

  <!-- Run the map server -->
  <arg name="map_file" default="$(find project4)/maps/map.yaml"/>
  <node name="map_server" pkg="map_server" type="map_server" args="$(arg map_file)" />

  <!--- Run Move Base -->
  <include file="$(find jackal_navigation)/launch/include/move_base.launch" />

  <!-- Run Rviz with gmapping configuration-->
  <param name="use_gui" value="true"/>
  <arg name="config" default="localization" />
  <node name="rviz" pkg="rviz" type="rviz" args="-d $(find jackal_viz)/rviz/$(arg config).rviz" />

  <node pkg="rosbag" type="record" name="rosbag_record" args="record -o $(find project4)/bagfiles/localize /tf /front/scan" if="$(arg record)" />
</launch>
